<!DOCTYPE html>
<html>

<head>
    <title>Habit Dashboard</title>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <link rel="stylesheet" type="text/css" href="css/style.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="./cdnjs/mustache.min.js"></script>
</head>

<body style="overflow-x: hidden;">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">Habit Tracker</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="#">About Us</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Help</a>
                </li>
            </ul>
            <form class="form-inline my-2 my-lg-0">
                <img src="./assets/user.png" class="user-avatar" />
                <button class="btn btn-outline-success my-2 my-sm-0" disabled><%= name %></button>
            </form>
        </div>
    </nav>

    <div id="card-container" class="row row-cols-1 row-cols-md-2 card-section">

        <% hobbies.forEach(function (hobby) { %>
            <div class="col mb-4">
                <div class="card">
                    <!-- <img src="./assets/user.png" class="card-img-top" alt="..."> -->
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= hobby %>
                        </h5>
                        <button type="button" onclick="location.href='/hobbystatus/<%= hobby %>'" class="btn btn-warning book-button">Track Hobby</button>
                    </div>
                </div>
            </div>

            <% }) %>

    </div>
    <div class="add-hobby">
        <button onclick="openModal()">
                ADD HOBBY
        </button>
    </div>
    <div id='modal' class="modal-holder">
        <div class="modal-container">
            <form id="add-form">
                <input id="i1" type="text" placeholder="Hobby Name" required>
                <button>ADD</button>
            </form>
        </div>
    </div>

    <script id="hobby-temp" type="text/html">
        <div class="col mb-4">
            <div class="card">
                <!-- <img src="./assets/user.png" class="card-img-top" alt="..."> -->
                <div class="card-body">
                    <h5 class="card-title">
                        {{hobby}}
                    </h5>
                    <button type="button" onclick="location.href='/hobbystatus/{{hobby}}'" class="btn btn-warning book-button">Track Hobby</button>
                </div>
            </div>
        </div>
    </script>
    <script src="js/main.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
</body>

</html>